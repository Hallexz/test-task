{# templates/article/list.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Список статей{% endblock %}

{% block body %}
    <h1>Список статей</h1>

    <ul>
        {% for article in articles %}
            <li>
                <a href="{{ path('article_detail', {'slug': article.slug}) }}">
                    {{ article.title }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
