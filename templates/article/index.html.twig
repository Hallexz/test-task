{# templates/article/detail.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <h1>{{ article.title }}</h1>
    <p><strong>Описание:</strong> {{ article.description }}</p>
    <p><strong>Просмотры:</strong> {{ article.views|format_views }}</p>
    <p><strong>Дата создания:</strong> {{ article.createdAt|date('Y-m-d H:i:s') }}</p>
{% endblock %}
